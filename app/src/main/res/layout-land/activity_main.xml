<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/email_text_input"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@dimen/email_input_weight"
        android:hint="@string/text_input_hint"
        android:inputType="textCapSentences|textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/preview_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/preview_button_weight"
        android:text="@string/preview_button_text"
        app:layout_constraintLeft_toRightOf="@id/email_text_input" />

</LinearLayout>